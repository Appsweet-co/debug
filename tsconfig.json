{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": false,
    "target": "es2015",
    "lib": [
      "DOM",
      "ES2017"
    ],
  },
  "include": [
    "**/*.ts"
  ],
  "typedocOptions": {
    "entryPoints": "index.ts",
    "excludeExternals": false,
    "excludeInternal": false,
    "excludePrivate": false,
    "gitRemote": "https://github.com/Appsweet-co/debug.git",
    "out": "docs",
  }
}
